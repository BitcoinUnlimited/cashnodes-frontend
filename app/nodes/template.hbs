{{#if model.getNodes.isRunning}}
  <div class="layout flex layout-align-space-around">
    {{paper-progress-circular warn=true class="md-hue-3" diameter=96}}
  </div>
{{else}}
  <div class="layout-column flex layout-align-space-araund md-padding">
      {{#paper-toolbar}}
        {{#paper-toolbar-tools}}
          <h2>Bitcoin Cash Nodes ({{nodesCount}})</h2>
          <span class="flex"></span>
          {{#paper-button raised=true}}
            Filter
          {{/paper-button}}
        {{/paper-toolbar-tools}}
      {{/paper-toolbar}}
      {{occluded-table model=nodesData}}
  </div>
{{/if}}
