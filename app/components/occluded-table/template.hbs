{{#light-table table
               height='90vh'
               occlusion=true
               estimatedRowHeight=50
               responsive=true
  as |t|}}

  {{t.head
    fixed=true
  }}

  {{#t.body
    canSelect=false
    scrollBuffer=200
    onScrolledToBottom=(action 'onScrolledToBottom')
  as |body|
  }}
    {{#body.expanded-row as |row|}}
      {{responsive-expanded-row table=table row=row}}
    {{/body.expanded-row}}

    {{#if isLoading}}
      {{#body.loader}}
        {{table-loader}}
      {{/body.loader}}
    {{/if}}
  {{/t.body}}

  {{t.foot
    fixed=true
  }}
{{/light-table}}
